{{> doc-head }}
<link href="/assets/css/projects.css" rel="stylesheet">
<body class="project">
    {{> header }}

    <main>
        <div id="project-wrapper">
            <div class="imageWrapper">
            <div class="project-img"><img src="{{image}}"/></div>
            </div>
            <div class="text-contents">
            <div class="project_nav">
                    {{#if previous}}
                    <a class="prev" href="{{{previous.url}}}">&larr;</a>
                    {{/if}}
                    {{#if next}}
                    <a class="next right" href="{{{next.url}}}">&rarr;</a>
                    {{/if}}
            </div>
            <h1>{{ title }}</h1>
            {{{ contents }}}     
        </div>    
    </main>

    {{> footer }}
</body>
</html>
